<% layout('/layouts/boilerplate.ejs') %>
<body>
    <h3>Details of <i> <%= listing.title %></i></h3>
    <ul>
       
           <li> <%= listing.title %> </li>
           <li> <%= listing.description %> </li>
           <li> &#8377; <%= listing.price.toLocaleString("en-In") %> </li> 
           <!-- to add commas as per indian currency -->
           <li> <%= listing.location %> </li>
           <li> <%= listing.country %> </li>
    </ul>
    <a href="/listing/<%= listing._id %>/edit">Edit This list </a>
   <br><br> <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
        <button>Delete this Listing</button>
    </form>
</body>
