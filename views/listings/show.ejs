<% layout('/layouts/boilerplate.ejs') %>
<body>

    <div class="row mt-4">
        <div class="col-9 offset-3">
            <h3>Details of <i> <%= listing.title %></i></h3>
            <div class="card col-5 offset-1">
                <img src="<%= listing.image %>" class="class-img-top" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <ul>
                         <b> <%= listing.title %> </b>
                         <li> <%= listing.description %> </li>
                         <li> &#8377; <%= listing.price.toLocaleString("en-In") %> </li> 
                         <!-- to add commas as per indian currency -->
                         <li> <%= listing.location %> </li>
                         <li> <%= listing.country %> </li>
                        </ul>
                        <div class="row">
                            <div class="col-2 offset-3">
                                <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit </a>
                            </div>
                            <div class="col-5">
                                <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
                                    <button class="btn btn-dark delete-btn">Delete</button>
                                </form>
                            </div>
                        </div>
                       
                    </p>
                </div>
            </div>
        </div>
    </div>
    
</body>
